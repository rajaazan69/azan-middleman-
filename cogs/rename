@commands.command(name="rename", help="Renames the current ticket channel.")
@commands.has_permissions(manage_channels=True)
async def rename(self, ctx: commands.Context, *, new_name: str):
    channel = ctx.channel

    # Ensure this is a ticket channel
    if channel.category_id != TICKET_CATEGORY_ID:
        return await ctx.send("❌ You can only rename ticket channels!", delete_after=10)

    try:
        await channel.edit(name=new_name)
        await ctx.send(f"✅ Renamed to `{new_name}`", delete_after=10)
    except Exception as e:
        await ctx.send(f"❌ Error: {e}", delete_after=10)