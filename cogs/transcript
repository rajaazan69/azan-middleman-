@commands.command(name="transcript", help="Generates a transcript of the current ticket channel.")
@commands.has_permissions(manage_channels=True)
async def transcript(self, ctx: commands.Context):
    channel = ctx.channel

    # Ensure this is a ticket channel
    if channel.category_id != TICKET_CATEGORY_ID:
        return await ctx.send("❌ You can only generate transcripts in ticket channels!", delete_after=10)

    await ctx.send("**Generating transcript**", delete_after=5)

    # Call your transcript handler cog
    try:
        cog = ctx.bot.get_cog("Transcripts")
        if cog:
            await cog.generate_transcript(ctx, channel)  # re-use your existing transcript logic
        else:
            await ctx.send("❌ Transcript system is not available.", delete_after=10)
    except Exception as e:
        await ctx.send(f"❌ Error: {e}", delete_after=10)